<!DOCTYPE html>
<html lang="en">
<%- include('head') %>

<body>
	<main>
		<section id="detail">
			<a href="<%= data.url %>" target="_blank">
				<picture>
					<source srcset="<%= data.webp %>">
					<img src="<%= data.jpg %>" title="<%= data.title %>" alt="NASA Astronomy Picture">
				</picture>
			</a>
			<a href="/back">
				<img src="../../media/images/exit_icon.svg" alt="navigate to overview">
			</a>
			<h1><%= data.title %></h1>
			<p><%= data.date %></p>
			<p><%= data.explanation %></p>
			<p><%= (data.copyright === "public_domain") ? "public domain" : data.copyright %></p>
		</section>
	</main>
</body>

</html>